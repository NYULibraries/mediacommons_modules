/**
 * Implements hook_user_login().
 * https://api.drupal.org/api/drupal/modules%21user%21user.api.php/function/hook_user_login/7.x
 */
function mediacommons_editorialworkflow_user_login(&$edit, $account) {
  $parameters = drupal_get_query_parameters();
  $redirection = $destination = NULL;
  $project = $hail = variable_get('mediacommons_project', 'mediacommons');
  if (isset($edit['values']['project'])) {
    $hail = $edit['values']['project'];
  }
  elseif (isset($parameters['project'])) {
    $hail = $parameters['project'];
  }
  if (isset($edit['values']['destination'])) {
    $destination = $edit['values']['destination'];
  }
  elseif (isset($parameters['destination'])) {
    $destination = $parameters['destination'];
  }
  // allow users to log-in from any MediaCommons project and return to the intended target
  // https://jira.nyu.edu/jira/browse/MC-344
  if (
    $project != $hail // user is trying to log-in from a MediaCommon project (not Umbrella)
  ) {
    if ($destination) { // we have a destination to go
      $redirection = mc_project_url($hail) . '/' . check_plain($destination);
    }
    else {
      $redirection = mc_project_url($hail);
    }
  }
  // I need to check from where the user "hail from" e.g., if user is trying to write
  // a comment redirect to the original post after login.
  if (isset($parameters['redirect'])) {
    $redirection = $parameters['redirect'];
  }
  // if $redirection is set and the user is not trying to reset his password,
  // we redirect to $redirection.
  if (
    !is_null($redirection)
    &&
    (!isset($_POST['form_id']) || $_POST['form_id'] != 'user_pass_reset'))
  {
    if (
      isset($_GET['destination'])
      &&
      url_is_external($_GET['destination'])
      )
    {
      drupal_goto($_GET['destination']);
    }
    else {
      $_GET['destination'] = $redirection;
      $edit['redirect'] = $redirection;
    }
  }
}

