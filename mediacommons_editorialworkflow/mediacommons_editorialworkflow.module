/**
 * https://api.drupal.org/api/drupal/modules%21system%21theme.api.php/function/hook_process/7.x
 */
function mediacommons_editorialworkflow_process_field(&$variables, $hook) {
  $name = $variables['element']['#field_name'];
  $bundle = $variables['element']['#bundle'];
  // in certain cases we allow the "preview" of a content that has not been
  // published. E.g., MediaCommoms IMR "preview" the title of the upcoming "posts"
  if ($bundle == 'spoke' && ($name == 'title' || $name == 'field_representative_image')) {
    $now = time();
    $variables['label_link'] = FALSE;
    $node = $variables['element']['#object'];
    $wrapper = entity_metadata_wrapper('node', $node);
    $pubdate = $wrapper->field_pubdate->value();
    // check for the value of "Publication day"
    if ($pubdate > $now) {
      // the content is not available
      // allow the users in certain cases to see the "preview" but don't
      // link to content
      if ($name == 'field_representative_image') {
        foreach ($variables['items'] as $key => $item) {
          // https://api.drupal.org/api/drupal/modules%21image%21image.field.inc/function/theme_image_formatter/7.x
          $variables['items'][$key]['classes_array'][] = "futurepub";
        }
      }
      // @TODO: why?
      if ($name == 'title') {
        foreach ($variables['items'] as $key => $item) {
          $variables['items'][$key]['#markup'] = $wrapper->label();
        }
      }
    }
  }
}

/**
 * Custom hook. Called by mediacommons_editorialworkflow_process_node
 */
function mediacommons_editorialworkflow_process_node_spoke(&$variables, $wrapper) {
  // get the current time
  $now = time();
  // sites can use field_pubdate to indicate that a node it is ready and
  // will be available to public after pubdate.
  $pubdate = $wrapper->field_pubdate->value();
  // node available for general public at the moment
  if ($pubdate <= $now) {
    $variables['classes'] = $variables['classes'] . ' is-available';
  }
  // node not available for general public at the moment
  else {
    $variables['classes'] = $variables['classes'] . ' not-available';
  }
}

/**
 * See https://api.drupal.org/api/drupal/modules%21system%21theme.api.php/function/hook_process/7.x
 */
function mediacommons_editorialworkflow_process_node(&$variables) {
  $wrapper = entity_metadata_wrapper('node', $variables['node']);
  $callback = __FUNCTION__ . '_' . $wrapper->getBundle();
  // Allow us to process by bundle
  // e.g., mediacommons_editorialworkflow_process_node_spoke
  if (function_exists($callback)) {
    $callback($variables, $wrapper);
  }
}

/**
 * Validate user, if error, redirect to user/login page.
 * See: https://jira.nyu.edu/jira/browse/MC-320
 */
function mediacommons_editorialworkflow_form_validate(&$form, &$form_state) {
  if (empty($form_state['uid'])) {
    $project = $hail = variable_get('mediacommons_project', 'mediacommons');
    $destination = $_GET['destination'] = 'user/login';
    $query = array('query' => array());
    if (isset($form_state['values']['project']) && $project != $hail) {
      $query['query']['project'] = $form_state['values']['project'];
    }
    if (isset($form_state['values']['destination'])) {
      $destination = $form_state['values']['destination'];
      if ($destination != $_GET['destination']) {
        $query['query']['destination'] = $destination;
      }
    }
    drupal_goto('user/login', $query);
  }
}

/**
 * Implements hook_form_alter().
 * https://api.drupal.org/api/drupal/modules%21system%21system.api.php/function/hook_form_alter/7.x
 */
function mediacommons_editorialworkflow_form_alter(&$form, &$form_state, $form_id) {
  global $user;
  switch ($form_id) {
    case 'user_login':
    case 'user_login_block':
      // https://jira.nyu.edu/jira/browse/MC-344
      $project = $hail = variable_get('mediacommons_project', 'mediacommons');
      $parameters = drupal_get_query_parameters();
      $qs = array('destination' => 'dashboard');
      $url_query = array();
      $build_query = NULL;
      $url_components = parse_url($form['#action']);
      $url_path = $url_components['path'];
      $set_destination = FALSE;
      // Destination
      // Post
      if (isset($_POST['destination'])) {
        $set_destination = check_plain($_POST['destination']);
      }
      // Get
      elseif (isset($_GET['destination'])) {
        $set_destination = check_plain($_GET['destination']);
      }
      // Last try HTTP referer
      elseif (isset($_SERVER['HTTP_REFERER'])) {
        parse_str(parse_url($_SERVER['HTTP_REFERER'], PHP_URL_QUERY), $queries);
        if (isset($queries['destination'])) {
          $set_destination = $queries['destination'];
        }
      }
      // Hail
      if (isset($_POST['project'])) {
        $hail = check_plain($_POST['project']);
      }
      elseif (isset($parameters['project'])) {
        $hail = $parameters['project'];
      }
      // Last try HTTP referer
      elseif ($set_destination && isset($queries['project'])) {
        $hail = $queries['project'];
      }

      if ($set_destination) {
        $qs['destination'] = $set_destination;
        $form['destination'] = array('#type' => 'hidden', '#value' => $qs['destination']);
      }
      if (isset($url_components['query'])) {
        parse_str($url_components['query'], $url_query);
      }
      $build_query = drupal_http_build_query(array_merge($qs, $url_query));
      if ($build_query) {
        $url_path = $url_path . '?' . $build_query;
        $form['query'] = array('#type' => 'hidden', '#value' => urlencode($build_query));
      }
      $form['project'] = array('#type' => 'hidden', '#value' => $hail);

      if (!$set_destination) {
        $form['#action'] = $url_path;
      }
      $form['#validate'][] = 'mediacommons_editorialworkflow_form_validate';
      break;
    case 'user_register_form':
      // Change error language of Google reCAPTCHA module
      // See: https://jira.nyu.edu/jira/browse/MC-329
      $form['#validate'][] = 'mediacommons_editorialworkflow_keep_going';
      break;

    case 'user_profile_form':
      if (
        (
          !in_array('user manager', $user->roles) &&
          !in_array('administrator', $user->roles) &&
          $user->uid !== '1'
        )
      ) {
        $form['#after_build'] = array('mediacommons_editorialworkflow_disable_project_field');
      }
      break;

  }
}

function mediacommons_editorialworkflow_disable_project_field($form_element, &$form_state) {
  $form_element['field_project']['#access'] = FALSE;
  return $form_element;
}

function mediacommons_editorialworkflow_is_admin() {
  global $user;
  if ($user->uid == 1 || array_key_exists('administrator', $user->roles)) {
    return TRUE;
  }
  return FALSE;
}

function mediacommons_editorialworkflow_projects_user_can_contribute() {
  global $user;
  $projects = array();
  $wrapper = entity_metadata_wrapper('user', $user);
  $entities = array();
  $nodes = db_query('SELECT n.nid FROM {node} n WHERE n.status = :status AND n.type = :type', array(':status' => 1, ':type' => 'project'))->fetchAll();

  foreach ($nodes as $node) {
    $entity = node_load($node->nid);
    $node_wrapper = entity_metadata_wrapper('node', $entity);
    $identifier = $node_wrapper->field_identifier->value();
    $entities[$identifier] = $node_wrapper;
  }

  $identifier = NULL;
  $node_wrapper = NULL;
  $entity = NULL;

  foreach ($wrapper->field_project->value() as $project) {
    if (isset($entities[$project])) {
      $projects[$project] = array(
        'label' => $entities[$project]->label(),
        'identifier' => $project,
        'path' => $entities[$project]->field_path->value(),
        'shortname' => $entities[$project]->field_shortname->value(),
      );
    }
  }

  return $projects;
}

function mediacommons_editorialworkflow_user_can_contribute_to_project($op, $project) {
  if (user_access('access mediacommons dashboard')) {
    $projects = mediacommons_editorialworkflow_projects_user_can_contribute();
    if (array_key_exists($project, $projects)) {
      return TRUE;
    }
  }
  return FALSE;
}

/**
 * Implements hook_form_FORM_ID_alter() for node.
 * https://api.drupal.org/api/drupal/modules%21system%21system.api.php/function/hook_form_FORM_ID_alter/7.x
 */
function mediacommons_editorialworkflow_form_node_form_alter(&$form, &$form_state, $form_id) {
  global $user;

  $projects_user_can_contribute = mediacommons_editorialworkflow_projects_user_can_contribute();

  // indication that this form was process by the editorial workflow module
  $form['#attributes']['class'][] = 'editorial-workflow';

  foreach ($user->roles as $role) {
    $form['#attributes']['class'][] = 'editorial-workflow-' . str_replace(' ', '-', $role);
  }

  // check if we are in a edit form
  if (isset($form['#node_edit_form']) && $form['#node_edit_form']) {
    // check if the form contains a type of "publication date"
    $pubdate = (isset($form['field_pubdate']) || isset($form['field_period'])) ? TRUE : FALSE;
    $pubstat = (isset($form['field_pubstat'])) ? TRUE : FALSE;
    // remove the option of selecting "Publish using publication date"
    // from "Publication Status" field if the form does not have any
    // type of "publication date"
    if ($pubstat && !$pubdate) {
      $language = $form['language']['#value'];
      $needle = 'Publish using publication date';
      $haystack = $form['field_pubstat'][$language]['#options'];
      // find the position of $needle inside $haystack
      $position = array_search($needle, $haystack, TRUE);
      // unset position if found
      // this will remove the option to select "Publish using publication date"
      // in the edit form.
      if ($position) {
        unset($form['field_pubstat'][$language]['#options'][$position]);
      }
    }

    if (!mediacommons_editorialworkflow_is_admin()) {
      // hide the "Publishing option" menu in the edit form.
      $form['options']['#type'] = 'container';
      $form['options']['#title'] = '';

    }

    $form['options']['status'] = array('#type' => 'value', '#value' => 1);

  }
}

