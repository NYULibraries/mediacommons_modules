/**
 * Route callback for books edit page
 */
function _mediacommons_editorialworkflow_edit_redirect() {
  $path = drupal_get_normal_path(arg(0) . '/' . arg(1));
  if ($path) {
    drupal_goto($path . '/edit');
  }
  drupal_not_found();
}

function _mediacommons_editorialworkflow_users_as_json($uid) {
  drupal_add_http_header('Content-Type', 'application/json');
  $user = user_load_by_name($uid);
  unset($user->pass);
  unset($user->rdf_mapping);
  unset($user->signature_format);
  unset($user->init);
  unset($user->theme);
  unset($user->data);
  echo drupal_json_encode($user);
  die();
}

function _mediacommons_editorialworkflow_users_edit($username) {
  $user = user_load_by_name($username);
  if ($user) {
    drupal_goto('user/' . $user->uid . '/edit');
  }
  drupal_not_found();
}

