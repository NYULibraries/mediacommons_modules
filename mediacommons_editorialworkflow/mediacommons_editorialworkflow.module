function mediacommons_editorialworkflow_contributor_dashboard_rebuild_cache($bid) {
  if (empty($_GET['tok']) || !drupal_valid_token($_GET['tok'])) {
    return MENU_ACCESS_DENIED;
  }
  /** make sure Drupal Ajax framework javascript is around */
  drupal_add_library('system', 'drupal.ajax');
  $commands = array();
  $sql = "SELECT mbid, type, url, callback FROM {mediacommons_blocks_blocks} WHERE mbid = :mbid ORDER BY proceed ASC";
  $item = db_query($sql, array(':mbid' => $bid))->fetchObject();
  $update = array('proceed' => time(), 'expire' => time() + (3600 * 4),);
  if (filter_var($item->url, FILTER_VALIDATE_URL)) {
    $url = check_url($item->url);
    $request = drupal_http_request($url);

    /** we can't reach the URL. we have a problem. */
    if (isset($request->error)) {
      $commands[] = ajax_command_alert($request->error);
    }

    elseif ($request->status_message) {
      $status_message = strtolower(check_plain($request->status_message));
      if ($status_message == 'ok') {
        $update['content'] = serialize(filter_xss($request->data, mediacommons_filter_allowed_tags()));
        $success = db_update('mediacommons_blocks_blocks')->fields($update)->condition('mbid', $bid, '=')->execute();
        if ($success) {
          $commands[] = ajax_command_alert('Success');
        }
      }
      else {
        $commands[] = ajax_command_alert($status_message);
      }
    }

  }
  return array(
    '#type' => 'ajax',
    '#commands' => $commands,
  );
}

